<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<workflow-app xmlns="uri:oozie:workflow:0.5" name="spark-action">
    <start to="spark"/>
    <action name="spark">
        <spark xmlns="uri:oozie:spark-action:0.2">
            <job-tracker>${resourceManager}</job-tracker>
            <name-node>${nameNode}</name-node>
            <prepare>
                <delete path="${nameNode}/user/centos/output-data/spark"/>
            </prepare>
            <master>yarn-cluster</master>
            <name>SparkFileCopy</name>
            <class>org.apache.oozie.example.SparkFileCopy</class>
            <jar>${nameNode}/user/centos/spark-action/lib/oozie-examples.jar</jar>
            <arg>${nameNode}/user/centos/input-data/text/data.txt</arg>
            <arg>${nameNode}/user/centos/output-data/spark</arg>
        </spark>
        <ok to="end"/>
        <error to="kill"/>
    </action>
    <kill name="kill">
        <message>${wf:errorMessage(wf:lastErrorNode())}</message>
    </kill>
    <end name="end"/>
</workflow-app>
